<div id="filterrific_results">
	<table class="table" id="myTable">
		<thead>
			<tr>
				<th>User ID</th>
				<th>Listing Title</th>
				<th>Picture</th>
				<th>Address</th>
				<th><%= filterrific_sorting_link(@filterrific, :price) %></th>
				<th>Show</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			<% listings.each do |listing| %>
		<tr>
			<td><%= listing.user_id %></td>
			<td><%= listing.title%></td>
			<td><%= image_tag(listing.pictures[0].thumb) if listing.pictures? %></td>
			<td><%= listing.address %></td>
			<td><%= listing.price %></td>
			<td><%= link_to 'More Info', listing %></td>
			<% if signed_in? and current_user.id == listing.user_id %>
				<td><%= link_to 'Edit', edit_listing_path(listing)%></td>
				<td><%= link_to 'Delete', listing, method: :delete, data: {confirm: 'Are you sure?' } %></td>
			<% end %>	
		</tr>	
		<% end %>
		</tbody>
	</table>
</div>