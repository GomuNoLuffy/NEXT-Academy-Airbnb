
<%= form_for @user do |form| %>

	<div class="text-field">
	  <%= form.label :email %>
	  <%= form.text_field :email, type: 'email' %>
	</div>

	<div class="password-field">
	  <%= form.label :password %>
	  <%= form.password_field :password %>
	</div>
	<div>
		<label> Profile Picture </label>
		<%= form.file_field :image, multiple: false %>
	</div>

		<%= form.submit %>

<% end %>

